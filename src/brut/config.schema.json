{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/stephen-bunn/brut",
  "type": "object",
  "title": "Brut Configuration",
  "required": [
    "watch",
    "enqueue"
  ],
  "properties": {
    "watch": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "type",
          "args"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "args": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "kwargs": {
            "type": "object"
          },
          "schedule": {
            "type": "object",
            "required": [
              "crontab",
              "immediate"
            ],
            "properties": {
              "crontab": {
                "type": "string"
              },
              "immediate": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "enqueue": {
      "type": "object",
      "required": [
        "crontab",
        "immediate"
      ],
      "properties": {
        "crontab": {
          "type": "string"
        },
        "immediate": {
          "type": "boolean"
        }
      }
    }
  }
}
