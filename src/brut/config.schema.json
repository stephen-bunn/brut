{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/stephen-bunn/brut",
  "type": "object",
  "title": "Brut Configuration",
  "required": [
    "watchers",
    "watch",
    "enqueue"
  ],
  "properties": {
    "watchers": {
      "type": "object",
      "required": [
        "reddit"
      ],
      "properties": {
        "reddit": {
          "type": "object",
          "required": [
            "client_id",
            "client_secret",
            "user_agent"
          ],
          "properties": {
            "client_id": {
              "type": "string"
            },
            "client_secret": {
              "type": "string"
            },
            "user_agent": {
              "type": "string"
            }
          }
        }
      }
    },
    "watch": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "type",
          "args"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "args": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "kwargs": {
            "type": "object"
          },
          "schedule": {
            "type": "object",
            "required": [
              "crontab",
              "immediate"
            ],
            "properties": {
              "crontab": {
                "type": "string"
              },
              "immediate": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "enqueue": {
      "type": "object",
      "required": [
        "crontab",
        "immediate"
      ],
      "properties": {
        "crontab": {
          "type": "string"
        },
        "immediate": {
          "type": "boolean"
        }
      }
    }
  }
}
